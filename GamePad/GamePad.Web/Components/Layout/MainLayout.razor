@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<div class="page">
    @if (IsNavMenuPage())
    {
        <div class="sidebar">
            <NavMenu />        
        </div>
    }

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private bool IsNavMenuPage()
    {
        return NavigationManager.Uri.Contains("controller", StringComparison.OrdinalIgnoreCase) == false;
    }
}

